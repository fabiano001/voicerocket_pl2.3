<%- model_class = RunStat -%>
<div class="page-header">
  <h1><%=t '.title', :default => RunStat %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:live_answer) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.live_answer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:machine_answer) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.machine_answer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:do_not_call) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.do_not_call %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:no_answer) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.no_answer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:carrier_error) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.carrier_error %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:busy_signal) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.busy_signal %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_cost) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.total_cost %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_called) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.total_called %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:total_left_to_call) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.total_left_to_call %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:successful_contacts) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.successful_contacts %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:unsuccessful_contacts) %></dt>
      <dd><pre class="prettyprint"><%= @run_stat.unsuccessful_contacts %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              run_stats_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_run_stat_path(@run_stat), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              run_stat_path(@run_stat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

