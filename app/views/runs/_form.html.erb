<%= simple_form_for(@run) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :status %>
    <%= f.input :launch %>
    <%= f.association :contact_list %>
    <%= f.association :campaign %>
    <%= f.association :voice_campaign %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
