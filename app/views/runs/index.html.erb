<h1>Listing runs</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Launch</th>
      <th>Contact list</th>
      <th>Campaign</th>
      <th>Voice campaign</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.status %></td>
        <td><%= run.launch %></td>
        <td><%= run.contact_list %></td>
        <td><%= run.campaign %></td>
        <td><%= run.voice_campaign %></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Run', new_run_path %>
